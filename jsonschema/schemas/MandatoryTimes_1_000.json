{
	"$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/MandatoryTimes/v1/1_000/jsonschema/schemas/events/MandatoryTime_1_000.json#",
	"info": {
		"description": "API para a entidade de horário obrigatório (MandatoryTime) para produtos TOTVS",
		"version": "1.000",
		"title": "MandatoryTime",
		"contact": {
			"name": "T-Talk",
			"url": "API.Totvs.com.br",
			"email": "comiteintegracao@totvs.com.br"
		},
		"x-totvs": {
			"messageDocumentation": {
				"name": "MandatoryTimes",
				"description": "Horário Obrigatório",
				"segment": "RH"
			},
			"productInformation": [{ 
				"product": "RM",
				"contact": "rm_FW@totvs.com.br",
				"description": "Listagem dos horários obrigatórios"
			}]
		}
	},
	"definitions": {
		"PagedMandatoryTimes": {
			"type": "object",
			"allOf": [{
				"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/MandatoryTimes/v1/1_000/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
			},
			{
				"type": "object",
				"properties": {
					"items": {
						"type": "array",
						"items": {
							"$ref": "#/components/schemas/MandatoryTimesInfo"
						}
					}
				}
			}]
		},
		"MandatoryTimesInfo": {
			"type": "object",
			"properties": {
				"CompanyCode": {
					"type": "integer",
					"example": "1",
					"description": "Código da Empresa"
                },
                "EmployeeId": {
					"type": "string",
					"example": "00001",
					"description": "Chapa"
				},
				"Date": {
					"type": "datetime",
					"example": "1999-11-24 16:00:39",
					"description": "Data de início do horário obrigatório"
				},
							
				"InitialHour": {
                    "type": "integer",
                    "example": "480",
					"description": "Hora de inicio do horário obrigatório em minutos"
                },
                "EndHour": {
                    "type": "integer",
                    "example": "480",
					"description": "Hora fim do horário obrigatório em minutos"
				},
				"OvertimeOption":{
					"type": "integer",
					"example": "1",
					"description": "Opção de hora extra (booleano)"
                },
                "DelayOption":{
					"type": "integer",
					"example": "1",
					"description": "Opção de atraso (booleano)"
                },
                "AbsenceOption":{
					"type": "integer",
					"example": "1",
					"description": "Opção de falta (booleano)"
				},							
				"id": {
					"type": "string",
					"description": "Identificador do horário obrigatório"
				}
			}
		} 
  	}
}	