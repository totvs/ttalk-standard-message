{
    "$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/ProjectStage/v1/2_000/jsonschema/schemas/ProjectStage_1_000.json#",
    "info": {
        "description": "Contrato de Mensagem Padronizada para a situacao dos projetos do gestao de ambientes",
        "version": "1.000",
        "title": "DiscoveryStage",
        "contact": {
            "name": "T-Talk",
            "url": "API.Totvs.com.br",
            "email": "comiteintegracao@totvs.com.br"
        },
        "x-totvs": {
            "transactionDefinition": {
                "subType": "event",
                "businessContentType": {
                    "type": "object",
                    "$ref": "#/definitions/ProjectStageList"
                },
                "returnContentType": {
                    "type": "object",
                    "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/types/ListOfInternalId_1_000.json#/definitions/ReturnContentWithModelType"
                }
            },
            "messageDocumentation": {
                "name": "ProjectStage",
                "description": "Project Stage",
                "segment": "Foundation"
            },
            "productInformation": [
                {
                    "product": "Protheus",
                    "contact": "Protheus_FW@totvs.com.br",
                    "description": "Situacao dos projetos",
                    "adapter": "MPApiPrjStage.prw",
                    "helpUrl": "link aqui"
                }
            ]
        }
    },
    "definitions": {
        "PagedProjectStage": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
                },
                {
                    "type": "object",
                    "properties": {
                        "items": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/ProjectStageList"
                            }
                        }
                    }
                }
            ]
        },
        "ProjectStageList": {
            "type": "object",
            "properties": {
                "projectid": {
                    "description": "id do projeto",
                    "type": "string",
                    "example": "000001",
                    "maxLength": 6
                },
                "address": {
                    "description": "endereco do servidor",
                    "type": "string",
                    "example": "192.168.0.10",
                    "maxLength": 20
                },
                "port": {
                    "description": "porta do servidor",
                    "type": "string",
                    "example": "7000",
                    "maxLength": 10
                },
                "environment": {
                    "description": "nome do environment",
                    "type": "string",
                    "example": "envtop",
                    "maxLength": 200
                },
                "stage": {
                    "description": "nome do stage",
                    "type": "string",
                    "example": "production",
                    "maxLength": 30
                },
                "level": {
                    "description": "nivel do stage",
                    "type": "string",
                    "example": "3",
                    "maxLength": 3
                }
            }
        }
    },
    "parameters": {
        "companyGrp": {
            "name": "companyGrp",
            "in": "query",
            "required": false,
            "description": "Identificador representando o grupo de empresas",
            "schema": {
                "type": "string"
            }
        },
        "projectVer": {
            "name": "projectVer",
            "in": "query",
            "required": false,
            "description": "Identificador representando a versao do projeto",
            "schema": {
                "type": "string"
            }
        }
    }
}