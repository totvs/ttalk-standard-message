{
	"$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/events/RestGroups_1_000.json#",
	"info": {
		"description": "API para a entidade grupo de descanso (RestGroup) para produtos TOTVS",
		"version": "1.000",
		"title": "Grupo de Descanso",
		"contact": {
			"name": "T-Talk",
			"url": "API.Totvs.com.br",
			"email": "comiteintegracao@totvs.com.br"
		},
		"x-totvs": {
			"messageDocumentation": {
				"name": "RestGroup",
				"description": "Grupo de Descanso",
				"segment": "Recursos Humanos"
			},
			"productInformation": [
				{
					"product": "RM",
					"contact": "rm_FW@totvs.com.br",
					"description": "Listagem dos grupos de descanso"
				}
			]
		}
	},
	"definitions": {
		"PagedRestGroups": {
			"type": "object",
			"allOf": [
				{
					"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
				},
				{
					"type": "object",
					"properties": {
						"items": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/RestGroupsInfo"
							}
						}
					}
				}
			]
		},
		"RestGroupsInfo": {
			"type": "object",
			"properties": {
				"CompanyCode": {
					"type": "string",
					"example": "1",
					"description": "Código da Empresa",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ATABFOLGA.CODCOLIGADA",
							"required": true,
							"type": "integer",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"RestGroupCode": {
					"type": "string",
					"example": "0001",
					"description": "Código do Grupo de Descanso",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ATABFOLGA.CODTABFOLGA",
							"required": true,
							"type": "string",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"id": {
					"type": "string",
					"description": "Identificador do grupo de descanso",
					"x-totvs": [
						{
							"product": "RM",
							"available": true,
							"note": "Código do Grupo de Descanso",
							"field": "restgroup_id",
							"type": "string"
						}
					]
				},
				"Description": {
					"type": "string",
					"description": "Descrição do grupo de descanso",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ATABFOLGA.DESCRICAO",
							"required": false,
							"type": "integer",
							"available": true,
							"canUpdate": true
						}
					]
				}
			}
		}
	}
}