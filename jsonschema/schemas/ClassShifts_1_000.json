{
	"$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/ClassShifts_v1_000.json#",
	"info": {
		"description": "Contrato de Mensagem Padronizada para listagem de turnos dos produtos TOTVS",
		"version": "1.000",
		"title": "classShifts",
		"contact": {
			"name": "T-Talk",
			"url": "API.Totvs.com.br",
			"email": "comiteintegracao@totvs.com.br"
		},
		"x-totvs": {
			"messageDocumentation": {
				"name": "classShifts",
				"description": "Dados do turno do usuário",
				"segment": "Educational"
			},
			"productInformation": [
				{
					"product": "RM",
					"contact": "TribeEdu.Squad.EduPortalMobile@totvs.com.br",
					"description": "Turnos do Educacional"
				}
			]
		}
	},
	"definitions": {
		"PagedClassShifts": {
			"type": "object",
			"allOf": [
				{
					"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
				},
				{
					"type": "object",
					"properties": {
						"items": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/classShifts"
							}
						}
					}
				}
			]
		},
		"classShifts": {
			"description": "Descreve um turno Educacional",
			"properties": {
				"CompanyCode": {
					"description": "Código da empresa",
					"type": "string",
					"example": 1,
					"x-totvs": [
						{
							"product": "RM",
							"available": true,
							"required": true,
							"note": "Código da empresa",
							"field": "CODCOLIGADA",
							"type": "integer"
						}
					]
				},
				"CompanyInternalId": {
					"description": "InternalId da empresa",
					"type": "string",
					"example": 1,
					"x-totvs": [
						{
							"product": "RM",
							"note": "Código da empresa",
							"field": "CODCOLIGADA",
							"type": "string",
							"required": false,
							"available": true
						}
					]
				},
				"branchCode": {
					"type": "integer",
					"example": 1,
					"description": "Código filial",
					"x-totvs": [
						{
							"product": "RM",
							"note": "STURNO.CODFILIAL",
							"required": false,
							"available": true,
							"type": "smallint",
							"length": 2,
							"canUpdate": true
						}
					]
				},
				"BranchInternalId": {
					"description": "InternalId da filial",
					"type": "string",
					"example": "1|1",
					"x-totvs": [
						{
							"product": "RM",
							"note": "GFILIAL.CODCOLIGADA|GFILIAL.CODFILIAL",
							"required": false,
							"available": true
						}
					]
				},
				"classShiftCode": {
					"type": "integer",
					"example": "001",
					"description": "Código do turno",
					"x-totvs": [
						{
							"product": "RM",
							"field": "STURNO.CODTURNO",
							"required": false,
							"Type": "integer",
							"length": 5,
							"available": true,
							"canUpdate": false
						}
					]
				},
				"ClassShiftInternalId": {
					"type": "string",
					"description": "InternalId ClassShifts",
					"x-totvs": [
						{
							"product": "RM",
							"note": "STURNO.CODCOLIGADA|STURNO.CODTURNO",
							"required": false,
							"available": true
						}
					]
				},
				"name": {
					"type": "string",
					"example": "Manhã",
					"description": "Nome do turno",
					"x-totvs": [
						{
							"product": "RM",
							"field": "STURNO.NOME",
							"note": "Nome do turno Educacional",
							"required": false,
							"Type": "string",
							"length": 15,
							"available": true,
							"canUpdate": true
						}
					]
				},
				"startTime": {
					"type": "varchar",
					"example": "07:00",
					"description": "Hora Inicio",
					"x-totvs": [
						{
							"product": "RM",
							"field": "STURNO.HORINI",
							"required": false,
							"type": "varchar",
							"length": 6,
							"available": true,
							"canUpdate": true
						}
					]
				},
				"endTime": {
					"type": "varchar",
					"example": "11:30",
					"description": "Hora Fim",
					"x-totvs": [
						{
							"product": "RM",
							"note": "STURNO.HORFIM",
							"required": false,
							"available": true,
							"type": "varchar",
							"length": 6,
							"canUpdate": true
						}
					]
				},
				"type": {
					"type": "varchar",
					"example": "M",
					"description": "Tipo de turno",
					"x-totvs": [
						{
							"product": "RM",
							"note": "STURNO.TIPO",
							"required": false,
							"available": true,
							"type": "varchar",
							"length": 1,
							"canUpdate": true
						}
					]
				},
				"codeTypeCourse": {
					"type": "smallint",
					"example": "1",
					"description": "Código do tipo curso",
					"x-totvs": [
						{
							"product": "RM",
							"note": "STURNO.CODTIPOCURSO",
							"required": false,
							"available": true,
							"type": "smallint",
							"length": 2,
							"canUpdate": true
						}
					]
				}
			}
		}
	}
}