{
	"$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/Carrier_2_000.json#",

	"info": {
        "description": "Entidade Transportadora (Carrier) para produtos TOTVS",
        "version": "2.000",
        "title": "Carrier",
        "contact": {
            "name": "T-Talk",
            "url": "api.totvs.com.br",
            "email": "comiteintegracao@totvs.com.br"
        },
        "x-totvs": {
            "messageDocumentation": {
                "name": "Carrier",
                "description": "Entidade Transportadora (carrier) para produtos TOTVS",
                "segment": "Services"
            },
            "productInformation": [
                {
                    "product": "protheus",
                    "contact": "squad.crm@totvs.com.br",
                    "description": "Cadastro de Transportadoras",
                    "adapter": "mats050.prw"
                }
            ]
        }
    },
	"definitions": {
		"PagedCarriers": {
			"type": "object",
			"allOf": [
				{
					"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
				},
				{
					"type": "object",
					"properties": {
						"items": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/CarrierInfo"
							}
						}
					}
				}
			]
		},
	
		"CarrierInfo": {
			"type": "object",
			"properties": {
				"companyId": {
					"type": "string",
					"description": "Empresa",
					"maxLength": 3
				},
				"branchId": {
					"type": "string",
					"example": "D MG 01",
					"description": "Filial",
					"x-totvs": [
						{
							"product": "protheus",
							"field": "SA4.A4_FILIAL",
							"required": true,
							"type": "varchar",
							"lenght": "8",
							"available": false,
							"canUpdate": false
						}
					]
				},
				"code": {
					"type": "string",
					"example": "000001",
					"description": "Código da Transportadora",
					"maxLength": 15,
					"x-totvs": [
						{
							"product": "protheus",
							"field": "SA4.A4_COD",
							"description": "Código",
							"required": true,
							"type": "varchar",
							"lenght": "6",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"internalId": {
					"type": "string",
					"description": "InternalId da Transportadora no ERP",
					"x-totvs": [
						{
							"product": "protheus",
							"note": "O internalID da Transportadora é formado por SA4.A4_FILIAL|SA4.A4_COD",
							"type": "varchar"
						}
					]
				},
				"shortName": {
					"type": "string",
					"example": "Transportadora Ex",
					"description": "Nome reduzido da transportadora",
					"maxLength": 20,
					"x-totvs": [
						{
							"product": "protheus",
							"field": "SA4.A4_NREDUZ",
							"description": "Nome Reduzido",
							"required": false,
							"type": "varchar",
							"lenght": "15"
						}
					]
				},
				"name": {
					"type": "string",
					"example": "Transportadora Ex CO",
					"description": "Nome da transportadora",
					"maxLength": 40,
					"x-totvs": [
						{
							"product": "protheus",
							"field": "SA4.A4_NOME",
							"description": "Nome",
							"required": true,
							"type": "varchar",
							"lenght": "40"
						}
					]
				},
				"registerSituation": {
					"type": "string",
					"example": "1",
					"description": "Registro bloqueado: 1=Sim;2=Não",
					"enum": [
						"1",
						"2"
					]
				},
				"governamentalInformation": {
					"type": "object",
					"description": "Informações Governamentais",
					"$ref": "https://cdn.rawgit.com/renatocunha/Apis/951415fe/Apis/GovernmentalInformation/GovernmentalInformation_1_000.json#/components/schemas/GovernmentalInformation"
				},
				"address": {
					"type": "object",
					"$ref": "https://rawgit.com/nairansilva/Apis/master/Apis/Seller/address_2_000.json#/components/schemas/AddressInfo",
					"x-totvs": [
						{
							"product": "protheus",
							"description": "Address = A4_END Complement = A4_COMPLEM City Code = A4_COD_MUN Description = A4_MUN State Code = A4_EST ZIPCode = A4_CEP"
						}
					]
				},
				"listofComunicationInformation": {
					"type": "array",
					"description": "Informações de comunicação",
					"items": {
						"$ref": "https://cdn.rawgit.com/renatocunha/Apis/e85aa574/Apis/communicationInformation/CommunicationInformation_1_002.json#/components/schemas/CommunicationInformation"
					}
				},
				"listOfContacts": {
					"type": "array",
					"description": "Informações de Contato",
					"items": {
						"$ref": "https://cdn.rawgit.com/renatocunha/Apis/e85aa574/Apis/ContactInformation/ContactInformation_1_000.json#/components/schemas/ContactInformation"
					}
				}
			}
		}		
	}
}
