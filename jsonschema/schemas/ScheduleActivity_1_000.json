						{
							"product": "RM",
                            "field": "SZATIVIDADES.DESCATIVIDADE",
                            "maxLength": 255,
							"required": false,
							"type": "string",
							"available": true,
                            "canUpdate": true,
							"note": "Descrição da Atividade"
