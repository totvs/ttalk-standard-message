					"description": "Identificador do registro",
					"required": false,
					"type": "string",
					"example": "1$_$1$_$3",
					"x-totvs": [
						{
							"product": "RM",
							"field": "SZATIVIDADES.CODCOLIGADA|SZATIVIDADESAG.CODIGO|SZATIVIDADES.CODATIVIDADE",
							"required": false,
							"type": "string",
							"available": true,
							"canUpdate": false,
							"note": "Este dado e formado pelos campos Código da Coligada, Código da agenda, Código da Atividade"
						}
					]
				},
				"companyId": {
					"description": "Código da coligada",
					"required": true,
					"type": "integer",
					"exemple": 1,
					"x-totvs": [
						{
							"product": "RM",
							"field": "SZATIVIDADES.CODCOLIGADA",
							"required": true,
							"type": "integer",
							"available": true,
							"canUpdate": false,
							"note": "Código da Coligada"
						}
					]
				},
				"scheduleId": {
					"description": "Código da Agenda",
					"required": true,
					"type": "integer",
					"exemple": 100,
					"x-totvs": [
						{
							"product": "RM",
							"field": "SZATIVIDADESAG.CODIGO",
							"required": true,
							"type": "integer",
							"available": true,
							"canUpdate": false,
							"note": "Código da Agenda"
						}
					]
                },
                "scheduleCode": {
					"description": "Código da Agenda",
					"required": false,
					"type": "string",
					"example": "1$_$1",
					"x-totvs": [
						{
							"product": "RM",
							"field": "SZATIVIDADES.CODCOLIGADA|SZATIVIDADESAG.CODIGO",
							"required": false,
							"type": "String",
							"available": true,
							"canUpdate": false,
							"note": "Este dado e formado pelos campos Código da Coligada e Código da Agenda"
