						{
							"product": "RM",
							"field": "SZATIVIDADESAG.QTDMAXGRUPO",
							"required": true,
							"type": "integer",
							"available": true,
                            "canUpdate": true,                            
							"note": "Quantidade Máxima por Grupo"
						}
					]
                },
