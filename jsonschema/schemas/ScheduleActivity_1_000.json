					]
				},
                "activityId": {
                    "description": "Código da Atividade",
					"required": true,
                    "type": "integer",                    
					"exemple": 10,
					"x-totvs": [
						{
							"product": "RM",
							"field": "SZATIVIDADES.CODATIVIDADE",
                            "required": true,
							"type": "integer",
							"available": true,
							"canUpdate": false,
							"note": "Código da Atividade"
