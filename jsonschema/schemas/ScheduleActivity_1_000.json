					"description": "Bloqueia Agendamentos após Exceder Limite de Atividades da Agenda",
					"required": true,
					"type": "boolean",
					"exemple": true,
					"x-totvs": [
						{
							"product": "RM",
							"field": "SZATIVIDADESAG.BLOQAGLIMITEEXC",
							"required": true,
							"type": "boolean",
							"available": true,
                            "canUpdate": true,                            
							"note": "Bloqueia Agendamentos após Exceder Limite de Atividades da Agenda"
