								"$ref": "#/definitions/ProfessorCourse"
							}
						}
					}
				}
			]
		},
		"ProfessorCourse": {
			"description": "Descreve um curso do professor do Educacional",
			"properties": {
				"CompanyCode": {
					"description": "Código da empresa",
					"type": "string",
					"example": 1,
					"x-totvs": [
						{
							"product": "RM",
							"available": true,
							"required": true,
							"note": "Código da empresa",
							"field": "CODCOLIGADA",
							"type": "integer"
						}
					]
				},
				"BranchCode": {
					"description": "Código da filial",
					"type": "string",
					"example": 1,
					"x-totvs": [
						{
							"product": "RM",
							"available": true,
							"required": true,
							"note": "Código da filial",
							"field": "CODFILIAL",
							"type": "integer"
						}
					]
				},
				"InternalId": {
					"type": "string",
					"description": "InternalId ProfessorCourse",
					"x-totvs": [
						{
							"product": "RM",
							"note": "CODCOLIGADA|IDTURMADISC|CODCURSO|CODHABILITACAO",
							"required": false,
							"available": true
						}
					]
				},
				"CourseCode": {
					"type": "string",
					"example": "ADM",
					"description": "Código do curso",
					"x-totvs": [
						{
							"product": "RM",
							"field": "SCURSO.CODCURSO",
							"required": false,
							"Type": "string",
							"length": 10,
							"available": true
						}
					]
				},
				"CourseDescription": {
					"type": "string",
					"example": "Administração",
					"description": "Descrição do curso",
					"x-totvs": [
						{
							"product": "RM",
							"field": "SCURSO.NOME",
							"required": false,
							"Type": "string",
							"length": 500,
							"available": true
						}
					]
				},
				"MajorCode": {
					"type": "string",
					"example": "MKT",
					"description": "Código da habilitação",
					"x-totvs": [
						{
							"product": "RM",
							"field": "SHABILITACAO.CODHABILITACAO",
							"required": false,
							"Type": "string",
							"length": 10,
							"available": true
						}
					]
				},
				"MajorDescription": {
					"type": "string",
					"example": "Marketing",
					"description": "Descrição da habilitação",
					"x-totvs": [
						{
							"product": "RM",
							"field": "SHABILITACAO.NOME",
							"required": false,
							"Type": "string",
							"length": 150,
							"available": true
						}
					]
				}
			}
		}
