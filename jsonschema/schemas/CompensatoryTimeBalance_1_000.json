{
	"$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/validator-path-required-check/jsonschema/schemas/CompensatoryTimeBalance_1_000.json#",
	"info": {
		"description": "API para a entidade saldo de banco de horas (CompensatoryTimeBalance) para produtos TOTVS",
		"version": "1.000",
		"title": "Saldo de Banco de Horas",
		"contact": {
			"name": "T-Talk",
			"url": "API.Totvs.com.br",
			"email": "comiteintegracao@totvs.com.br"
		},
		"x-totvs": {
			"messageDocumentation": {
				"name": "CompensatoryTimeBalance",
				"description": "Saldo de Banco de Horas",
				"segment": "Recursos Humanos"
			},
			"productInformation": [
				{
					"product": "RM",
					"contact": "rm_FW@totvs.com.br",
					"description": "Listagem do saldo de banco de horas dos funcionários"
				}
			]
		}
	},
	"definitions": {
		"PagedCompensatoryTimeBalance": {
			"type": "object",
			"allOf": [
				{
					"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/validator-path-required-check/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
				},
				{
					"type": "object",
					"properties": {
						"items": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/CompensatoryTimeBalanceInfo"
							}
						}
					}
				}
			]
		},
		"CompensatoryTimeBalanceInfo": {
			"type": "object",
			"properties": {
				"CompanyCode": {
					"type": "integer",
					"example": "1",
					"description": "Código da Empresa",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ASALDOBANCOHOR.CODCOLIGADA",
							"required": true,
							"type": "integer",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"EmployeeId": {
					"type": "string",
					"example": "00001",
					"description": "Chapa",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ASALDOBANCOHOR.CHAPA",
							"required": true,
							"type": "string",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"InitialPeriod": {
					"type": "datetime",
					"example": "1999-11-24 16:00:39",
					"description": "Início do período para contabilizar o saldo do banco de horas",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ASALDOBANCOHOR.INICIOPER",
							"required": true,
							"type": "datetime",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"EndPeriod": {
					"type": "datetime",
					"example": "1999-11-24 16:00:39",
					"description": "Fim do período para contabilizar o saldo do banco de horas",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ASALDOBANCOHOR.FIMPER",
							"required": false,
							"type": "datetime",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"PreviousOvertime": {
					"type": "integer",
					"example": "1440",
					"description": "Saldo de horas extras anterior",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ASALDOBANCOHOR.EXTRAANT",
							"required": false,
							"type": "integer",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"PreviousDelay": {
					"type": "integer",
					"example": "1440",
					"description": "Saldo de atrasos anterior",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ASALDOBANCOHOR.ATRASOANT",
							"required": false,
							"type": "integer",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"PreviousAbsence": {
					"type": "integer",
					"example": "1440",
					"description": "Saldo de faltas anterior",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ASALDOBANCOHOR.FALTAANT",
							"required": false,
							"type": "integer",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"CurrentOvertime": {
					"type": "integer",
					"example": "1440",
					"description": "Saldo atual de horas extras",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ASALDOBANCOHOR.EXTRAATU",
							"required": false,
							"type": "integer",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"CurrentAbsence": {
					"type": "integer",
					"example": "1440",
					"description": "Saldo atual de faltas",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ASALDOBANCOHOR.FALTAATU",
							"required": false,
							"type": "integer",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"CurrentDelay": {
					"type": "integer",
					"example": "1440",
					"description": "Saldo atual de atrasos",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ASALDOBANCOHOR.ATRASOATU",
							"required": false,
							"type": "integer",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"CurrentBalance": {
					"type": "integer",
					"example": "1440",
					"description": "Saldo atual calculado",
					"x-totvs": [
						{
							"product": "RM",
							"field": "((ASALDOBANCOHOR.EXTRAATU + ASALDOBANCOHOR.EXTRAANT) - (ASALDOBANCOHOR.ATRASOATU + ASALDOBANCOHOR.ATRASOANT + ASALDOBANCOHOR.FALTAATU + ASALDOBANCOHOR.FALTAANT)) SALDOATUAL",
							"required": false,
							"type": "integer",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"id": {
					"type": "string",
					"description": "Identificador do saldo de banco de horas do funcionário",
					"x-totvs": [
						{
							"product": "RM",
							"available": true,
							"note": "Código do saldo de banco de horas do funcionário",
							"field": "compensatorytimebalance_id",
							"type": "string"
						}
					]
				}
			}
		}
	}
}