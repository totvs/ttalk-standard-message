{

    "openapi": "3.0.1",

    "servers": [

      {
        "description": "API para cadastro de endereços nos produtos TOTVS",    
        "url": "api.totvs.com.br"
      }

    ],

    "info": {
        "description": "API para cadastro de endereço(address) para uso dos produtos TOTVS",
        "version":"1.000",
        "title":"Address",
        "contact":{
            "name":"T-Talk",
            "url": "api.totvs.com.br",
            "email":"comiteintegracao@totvs.com.br"
        }
    },
    "paths":{
    },
    "components":{
        "parameters":{
            "Authorization":{
                "name":"authorization",
                "in":"header",
                "required":true,
                "description":"Cabeçalho usado para autorização das requisições",
                "schema":{
                    "type": "string"
                }
            },
            "Order":{
                "name":"order",
                "in":"query",
                "description":"Ordenação da coleção",
                "required":false,
                "schema":{
                    "type":"array",
                    "items":{
                        "type":"string"
                    },
                    "uniqueItems":true
                }
            }
        },
        "schemas":{
            "PagedAddress":{
                "type":"object",
                "allOf":[
                    {
                        "$ref":"#/components/schemas/Address"
                    }
                ]
            },
            "Address":{
				"type":"object",
				"properties":{
					"items":{
						"type":"array",
						"items":{
							"$ref":"#/components/schemas/AddressInfo"
						}
					}
				} 
            },
            "AddressInfo":{
                "type":"object",
                "properties":{
                    "address":{
                        "type":"string",
                        "description":"endereço",
                        "example":"Rua, Avenida, Rodovia, etc. Ex.: Avenida Braz Leme"
                    },
                    "number":{
                        "type":"string",
                        "description":"Número do endereço"
                    },
                    "complement":{
                        "type":"string",
                        "description":"Informações complementares do endereço"
                    },
                    "city": {
                    "type": "object",
                                    "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/types/city_2_000.json#/components/schemas/CitiesInfo"
                    },
                    "district":{
                        "type":"string",
                        "description":"Bairro",
                        "example":"Casa Verde"
                    },
                    "state": {
                                    "type": "object",
                                    "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/types/state_1_000.json#/components/schemas/StatesInfo"
                    },
                    "country": {
                                    "type": "object",
                                    "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/types/country_1_000.json#/components/schemas/CountriesInfo"
                    },
                    "zipCode":{
                        "type":"string",
                        "description":"CEP",
                        "example":"02022010"
                    },
                    "region":{
                        "type":"string",
                        "description":"Região",
                        "example":"Zona Norte"
                    },
                    "poBox":{
                        "type":"string",
                        "description":"Caixa postal"
                    },
                    "mainAddress":{
                        "type": "boolean",
                        "description": "Endereço principal?",
                        "example": true
                    },
                    "shippingAddress":{
                        "type":"boolean",
                        "description":"Endereço de entregas?",
                        "example":false
                    },
                    "billingAddress":{
                        "type":"boolean",
                        "description":"Endereço de cobrança?",
                        "example":true
                    }
                }
            
            }
        }
    }
}