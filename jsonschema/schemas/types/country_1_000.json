{
    "$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/types/Country_1_000.json#",

    "info": {
        "description": "API para manutenção cadastro de país(country) para uso dos produtos TOTVS",
        "version": "1.000",
        "title": "Country",
        "contact": {
            "name": "T-Talk",
            "url": "api.totvs.com.br",
            "email": "comiteintegracao@totvs.com.br"
        }
    },
    "definitions": {
        "PagedCountries": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "#/definitions/Paging"
                },
                {
                    "$ref": "#/definitions/Countries"
                }
            ]
        },
        "Countries": {
            "type": "object",
            "items": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/CountriesType"
                }
            }
        },
        "CountriesType": {
            "type": "object",
            "properties": {
                "countryCode": {
                    "type": "string",
                    "description": "Código do país"
                },
                "countryInternalId": {
                    "type": "string",
                    "description": "InternalId do país no ERP"
                },
                "countryDescription": {
                    "type": "string",
                    "description": "Nome do país"
                }
            }
        },
        "Paging": {
            "type": "object",
            "properties": {
                "hasNext": {
                    "type": "boolean",
                    "example": false
                }
            }
        },
        "ErrorDetails": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "#/definitions/ErrorModel"
                },
                {
                    "$ref": "#/definitions/ErrorDetail"
                }
            ]
        },
        "ErrorModel": {
            "type": "object",
            "required": [
                "code",
                "message",
                "detailedMessage"
            ],
            "properties": {
                "code": {
                    "type": "string",
                    "description": "Código indentificador do erro."
                },
                "message": {
                    "type": "string",
                    "description": "Literal no idioma da requisição descrevendo o erro para o usuário."
                },
                "detailedMessage": {
                    "type": "string",
                    "format": "uri",
                    "description": "Mensagem técnica e mais detalhada do erro."
                },
                "helpUrl": {
                    "type": "string",
                    "format": "uri",
                    "description": "URI para documentação do erro."
                }
            }
        },
        "ErrorDetail": {
            "type": "object",
            "properties": {
                "details": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ErrorModel"
                    }
                }
            }
        }
    }
}