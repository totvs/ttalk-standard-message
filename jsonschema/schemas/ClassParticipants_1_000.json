{
	"$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/events/ClassParticipants_1_000.json#",
	"info": {
		"description": "API para a entidade participantes da turma (ClassParticipants) para produtos TOTVS",
		"version": "1.000",
		"title": "Participantes da turma",
		"contact": {
			"name": "T-Talk",
			"url": "API.Totvs.com.br",
			"email": "comiteintegracao@totvs.com.br"
		},
		"x-totvs": {
			"messageDocumentation": {
				"name": "ClassParticipants",
				"description": "Participantes",
				"segment": "Recursos Humanos"
			},
			"productInformation": [
				{
					"product": "RM",
					"contact": "rm_FW@totvs.com.br",
					"description": "Listagem dos participantes das turmas"
				}
			]
		}
	},
	"definitions": {
		"ClassParticipantsInfo": {
			"type": "object",
			"properties": {
				"id": {
					"description": "Código da coligada e participante da turma",
					"type": "string",
					"x-totvs": [
						{
							"product": "RM",
							"available": true,
							"note": "Código da coligada e participante da turma",
							"field": "classesParticipants_id",
							"type": "string"
						}
					]
				},
				"CompanyCode": {
					"type": "string",
					"example": "1",
					"description": "Código da Empresa",
					"x-totvs": [
						{
							"product": "RM",
							"field": "VTURMA.CODCOLIGADA",
							"required": true,
							"type": "integer",
							"length": 2,
							"available": true,
							"canUpdate": false
						}
					]
				},
				"CompanyCodeInternalId": {
					"type": "string",
					"description": "InternalId Company",
					"x-totvs": [
						{
							"product": "RM",
							"field": "VTURMAS.CODCOLIGADA | VTURMAS.CODTURMA",
							"required": false,
							"type": "integer",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"ClassCode": {
					"type": "string",
					"example": "1",
					"description": "Código da turma",
					"x-totvs": [
						{
							"product": "RM",
							"field": "VTURMA.CODTURMA",
							"required": true,
							"type": "varchar",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"PersonInternalCode": {
					"type": "string",
					"example": "1",
					"description": "Código da pessoa matriculada na turma",
					"x-totvs": [
						{
							"product": "RM",
							"field": "VTURMA.CODPESSOA",
							"required": true,
							"type": "integer",
							"available": true,
							"canUpdate": true
						}
					]
				},
				"PersonInternalCodeInternalId": {
					"type": "string",
					"description": "InternalId Código pessoa",
					"x-totvs": [
						{
							"product": "RM",
							"field": "VTURMA.CODCOLIGADA|VTURMA.CODTURMA|VTURMA.CODPESSOA",
							"required": false,
							"available": true,
							"note": "A turma na linha RM é composta pelos campos CODCOLIGADA e CODTURMA"
						}
					]
				},
				"Name": {
					"type": "string",
					"example": "Turma do RM",
					"description": "Nome da turma",
					"x-totvs": [
						{
							"product": "RM",
							"field": "VTURMAS.NOME",
							"required": false,
							"type": "varchar",
							"length": "tamanho máximo de 150",
							"available": true,
							"canUpdate": true
						}
					]
				},
				"Chapa": {
					"type": "string",
					"example": "00001",
					"description": "Chapa do participante da turma",
					"x-totvs": [
						{
							"product": "RM",
							"field": "PFUNC.CHAPA",
							"required": true,
							"type": "varchar",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"ChapaInternalId": {
					"type": "string",
					"description": "InternalId Chapa Funcionario",
					"x-totvs": [
						{
							"product": "RM",
							"field": "PFUNC.CHAPA|PFUNC.CODCOLIGADA",
							"required": false,
							"available": true,
							"note": "A turma na linha RM é composta pelos campos CODCOLIGADA e CODTURMA"
						}
					]
				},
				"Email": {
					"type": "string",
					"example": "Turma do RM",
					"description": "Email do participante da turma",
					"x-totvs": [
						{
							"product": "RM",
							"field": "PPESSOA.EMAIL",
							"required": false,
							"type": "varchar",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"Active": {
					"type": "boolean",
					"example": "0",
					"description": "Identifica se a turma está ativa ou inativa",
					"x-totvs": [
						{
							"product": "RM",
							"field": "VTURMAS.ATIVO",
							"required": false,
							"type": "smallint",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"NumberOfOpenings": {
					"type": "integer",
					"format": "int32",
					"example": "5",
					"description": "Identifica o número de faltas do participante da turma",
					"x-totvs": [
						{
							"product": "RM",
							"field": "VTURMA.FALTAS",
							"required": false,
							"type": "int",
							"available": true,
							"canUpdate": true
						}
					]
				},
				"Available": {
					"type": "boolean",
					"example": "0",
					"description": "Identifica se o participante está disponivel para participar da turma",
					"x-totvs": [
						{
							"product": "RM",
							"field": "VTURMA.DISPONIVEL",
							"required": false,
							"type": "smallint",
							"available": true,
							"canUpdate": true
						}
					]
				}
			}
		}
	}
}