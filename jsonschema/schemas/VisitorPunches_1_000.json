{
	"$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/events/VisitorPunches_1_000.json#",
	"info": {
		"description": "API para a entidade batida de visitante (VisitorPunch) para produtos TOTVS",
		"version": "1.000",
		"title": "Batida de Visitante",
		"contact": {
			"name": "T-Talk",
			"url": "API.Totvs.com.br",
			"email": "comiteintegracao@totvs.com.br"
		},
		"x-totvs": {
			"messageDocumentation": {
				"name": "VisitorPunches",
				"description": "Batida de Visitante",
				"segment": "Recursos Humanos"
			},
			"productInformation": [
				{
					"product": "RM",
					"contact": "rm_FW@totvs.com.br",
					"description": "Listagem das batidas de visitante"
				}
			]
		}
	},
	"definitions": {
		"PagedVisitorPunches": {
			"type": "object",
			"allOf": [
				{
					"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
				},
				{
					"type": "object",
					"properties": {
						"items": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/VisitorPunchesInfo"
							}
						}
					}
				}
			]
		},
		"VisitorPunchesInfo": {
			"type": "object",
			"properties": {
				"CompanyCode": {
					"type": "string",
					"description": "Código da Empresa",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ABATVIS.CODCOLIGADA",
							"required": true,
							"type": "integer",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"EmployeeId": {
					"type": "string",
					"description": "Chapa do visitante",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ABATVIS.CHAPA",
							"required": true,
							"type": "string",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"ClockingDate": {
					"type": "date",
					"example": "1998-09-15T00:00:00",
					"description": "Data da batida do visitante",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ABATVIS.DATA",
							"required": false,
							"type": "datetime",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"Clocking": {
					"type": "integer",
					"description": "Batida do visitante em minutos",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ABATVIS.BATIDA",
							"required": true,
							"type": "integer",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"Status": {
					"type": "string",
					"description": "Status da batida",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ABATVIS.STATUS",
							"required": false,
							"type": "string",
							"available": true,
							"canUpdate": true
						}
					]
				},
				"Direction": {
					"type": "integer",
					"description": "Natureza da batida",
					"x-totvs": [
						{
							"product": "RM",
							"field": "ABATVIS.NATUREZA",
							"required": false,
							"type": "integer",
							"available": true,
							"canUpdate": true
						}
					]
				},
				"PunchHour": {
					"type": "string",
					"description": "Batida formatada por horas",
					"x-totvs": [
						{
							"product": "RM",
							"field": "punchHour",
							"required": false,
							"type": "string",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"SetDirection": {
					"type": "string",
					"description": "Verifica se a natureza da batida foi acertada",
					"x-totvs": [
						{
							"product": "RM",
							"field": "setDirection",
							"required": false,
							"type": "string",
							"available": true,
							"canUpdate": false
						}
					]
				},
				"id": {
					"type": "string",
					"description": "Identificador da batida do visitante",
					"x-totvs": [
						{
							"product": "RM",
							"available": true,
							"note": "Código da Batida do Visitante",
							"field": "visitorpunch_id",
							"type": "string"
						}
					]
				}
			}
		}
	}
}