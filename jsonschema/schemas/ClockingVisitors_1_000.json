{
	"$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/events/ClockingVisitors_1_000.json#",
	"info": {
		"description": "API para a entidade batidas de visitantes (ClockingVisitors) para produtos TOTVS",
		"version": "1.000",
		"title": "ClockingVisitors",
		"contact": {
			"name": "T-Talk",
			"url": "API.Totvs.com.br",
			"email": "comiteintegracao@totvs.com.br"
		},
		"x-totvs": {
			"messageDocumentation": {
				"name": "ClockingVisitors",
				"description": "Batida de Visitante",
				"segment": "RH"
			},
			"productInformation": [{ 
				"product": "RM",
				"contact": "rm_FW@totvs.com.br",
				"description": "Listagem das batidas de visitantes"
			}]
		}
	},
	"definitions": {
		"PagedVisitorClocking": {
			"type": "object",
			"allOf": [{
				"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
			},
			{
				"type": "object",
				"properties": {
					"items": {
						"type": "array",
						"items": {
							"$ref": "#/components/schemas/ClockingVisitorsInfo"
						}
					}
				}
			}]
		}
    },
	"ClockingVisitorsInfo": {
		"type": "object",
		"properties": {
            "CompanyCode": {
				"type": "integer",
				"example": "1",
				"description": "Código da Empresa",
				"x-totvs": [{
					"product": "RM",
					"field": "ABATVIS.CODCOLIGADA",
					"required": false,
					"type": "integer",
					"length": 2,
					"available": true,
					"canUpdate": false
				}]
            },
            "EmployeeId": {
				"type": "string",
				"example": "1",
				"description": "Chapa",
				"x-totvs": [{
					"product": "RM",
					"field": "ABATVIS.CHAPA",
					"required": false,
					"type": "string",
					"length": 2,
					"available": true,
					"canUpdate": false
				}]
			},
             "ClockingDate": {
                "type": "string",
                "format": "date-time",
				"example": "1999-11-24 16:00:39",
				"description": "Data da batida",
				"x-totvs": [{
					"product": "RM",
					"field": "ABATVIS.DATA",
					"required": false,
					"type": "datetime",
					"available": true,
					"canUpdate": false
				}]
            },
            "Clocking": {
                "type": "string",
				"description": "Batida",
				"x-totvs": [{
					"product": "RM",
					"field": "ABATVIS.BATIDA",
					"required": false,
					"type": "string",
					"available": true,
					"canUpdate": false
				}]
			},                        
            "Id": {
				"type": "string",
				"description": "Id composto pelo código da coligada, chapa, data da batida e batida",
				"x-totvs": [{
					"product": "RM",
					"field": "ABATVIS.CODCOLIGADA|ABATVIS.CHAPA|ABATVIS.DATA|ABATVIS.BATIDA",
					"required": true,
					"type": "string",
					"length": 2,
					"available": true,
					"canUpdate": false
				}]
            },
             "Status":{
                "type": "string",
				"description": "Status da batida",
				"x-totvs": [{
					"product": "RM",
					"field": "ABATVIS.STATUS",
					"required": false,
					"type": "string",
					"available": true,
					"canUpdate": true
				}]
            },
            "Direction":{
                "type": "string",
				"description": "Natureza da batida",
				"x-totvs": [{
					"product": "RM",
					"field": "ABATVIS.NATUREZA",
					"required": false,
					"type": "string",
					"available": true,
					"canUpdate": true
				}]
            }
            
        }
    }	
}