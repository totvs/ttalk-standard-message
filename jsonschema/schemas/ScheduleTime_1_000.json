{
    "$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/appointments/V1/1_000/jsonschema/schemas/ScheduleTime_1_000.json#",
    "info": {
        "description": "API para a entidade de configuração de horarios de um periodo da agenda para produtos TOTVS",
        "version": "1.000",
        "title": "horarios da Agenda",
        "contact": {
            "name": "T-Talk",
            "url": "https://api.totvs.com.br",
            "email": "comiteintegracao@totvs.com.br"
        },
        "x-totvs": {
            "messageDocumentation": {
                "name": "ScheduleTime",
                "description": "Informações de horarios da Agenda",
                "segment": "Saúde"
            },
            "productInformation": [
                {
                    "product": "RM",
                    "contact": "TOTVS.SAUDE.SQUAD.GHASSIST@totvs.com.br",
                    "description": "Cadastro de horarios da Agenda",
                    "adapter": ""
                }
            ]
        }
    },

    "definitions": {
        "modelDelete": {
            "type": "object",
            "properties": {
                "code": {
                    "description": "Identificador do registro",
                    "required": true,
                    "type": "string",
                    "example": "2$_$1$_$4$_$2$_$1100",
                    "x-totvs": [
                        {
                            "product": "RM",
                            "field": "SZHORARIO.CODCOLIGADA|SZHORARIO.IDPERIODO|SZHORARIO.CODIGO|SZHORARIO.DIA|SZHORARIO.HORAINI",
                            "required": true,
                            "type": "String",
                            "available": true,
                            "canUpdate": false,
                            "note": "Este dado e formado pelos campos Código da Coligada e Código do Período e Código do Agenda e Dia e Hora Inicio"
                        }
                    ]
                }
            }
        },
        "PagedScheduleTime": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
                },
                {
                    "$ref": "#/definitions/ScheduleTime"
                }
            ]
        },
        "ScheduleTime": {
            "type": "object",
            "properties": {
                "items": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ScheduleTimeInfo"
                    }
                }
            }
        },
        "ScheduleTimeInfo": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "#/definitions/modelDelete"
                },
                {
                    "$ref": "#/definitions/ScheduleTimeBase"
                }
            ]
        },
        "ScheduleTimeBase": {
            "type": "object",
            "properties": {
                "CompanyId": {
                    "description": "Código do coligada",
                    "required": true,
                    "type": "integer",
                    "exemple": 100,
                    "x-totvs": [
                        {
                            "product": "RM",
                            "field": "SZHORARIO.CODCOLIGADA",
                            "required": true,
                            "type": "integer",
                            "available": true,
                            "canUpdate": false,
                            "note": "Código do coligada"
                        }
                    ]
                },
                "ScheduleId": {
                    "description": "código da agenda",
                    "required": true,
                    "type": "integer",
                    "example": 1,
                    "x-totvs": [
                        {
                            "product": "RM",
                            "field": "SZHORARIO.CODIGO",
                            "required": true,
                            "type": "integer",
                            "available": true,
                            "canUpdate": false,
                            "note": "Código do Agenda"
                        }
                    ]
                },
                "ScheduleCode": {
                    "description": "Identificador do registro",
                    "required": false,
                    "type": "string",
                    "example": "1$_$1",
                    "x-totvs": [
                        {
                            "product": "RM",
                            "field": "SZHORARIO.CODCOLIGADA|SZHORARIO.CODIGO",
                            "required": false,
                            "type": "String",
                            "available": true,
                            "canUpdate": false,
                            "note": "Este dado e formado pelos campos Código da Coligada e Código do Agenda"
                        }
                    ]
                },
                "Day": {
                    "description": "Dia da semana",
                    "required": true,
                    "type": "string",
                    "exemple":  "2",
                    "x-totvs": [
                        {
                            "product": "RM",
                            "field": "SZHORARIO.DATAINI",
                            "required": true,
                            "type": "string",
                            "available": true,
                            "canUpdate": false,
                            "note": "Dia da semana"
                        }
                    ]
                },
                "TimeStart": {
                    "description": "hora inicio",
                    "required": true,
                    "type": "string",
                    "exemple":  "00:00",
                    "x-totvs": [
                        {
                            "product": "RM",
                            "field": "SZHORARIO.SZHORARIO",
                            "required": true,
                            "type": "string",
                            "available": true,
                            "canUpdate": false,
                            "note": "hora inicio"
                        }
                    ]
                },
                "TimeEnd": {
                    "description": "hora final",
                    "required": true,
                    "type": "string",
                    "example": "09:00",
                    "x-totvs": [
                        {
                            "product": "RM",
                            "field": "SZHORARIO.HORAFIM",
                            "required": true,
                            "type": "string",
                            "available": true,
                            "canUpdate": false,
                            "note": "hora final"
                        }
                    ]
                },
                "MaxTimeSlot": {
                    "description": "número maximo de encaixes",
                    "required": true,
                    "type": "integer",
                    "example": 2,
                    "x-totvs": [
                        {
                            "product": "RM",
                            "field": "SZHORARIO.MAXENCAIXE",
                            "required": true,
                            "type": "integer",
                            "available": true,
                            "canUpdate": false,
                            "note": "número maximo de encaixes"
                        }
                    ]
                },
                "WeekDayDuration": {
                    "description": "duração do horario no dia",
                    "required": false,
                    "type": "string",
                    "exemple": "20",
                    "x-totvs": [
                        {
                            "product": "RM",
                            "field": "SZHORARIO.DURACAODIASEMANA",
                            "required": false,
                            "type": "string",
                            "available": true,
                            "canUpdate": false,
                            "note": "duração do horario no dia"
                        }
                    ]
                }
            }
        }
    }
}