{
	"$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/CalculatedWarnings/v1/1_000/jsonschema/schemas/events/CalculatedWarnings_1_000.json#",
	"info": {
		"description": "API para a entidade de aviso calculado (CalculatedWarning) para produtos TOTVS",
		"version": "1.000",
		"title": "CalculatedWarning",
		"contact": {
			"name": "T-Talk",
			"url": "API.Totvs.com.br",
			"email": "comiteintegracao@totvs.com.br"
		},
		"x-totvs": {
			"messageDocumentation": {
				"name": "CalculatedWarnings",
				"description": "Aviso Calculado",
				"segment": "RH"
			},
			"productInformation": [{ 
				"product": "RM",
				"contact": "rm_FW@totvs.com.br",
				"description": "Listagem dos avisos calculados"
			}]
		}
	},
	"definitions": {
		"PagedCalculatedWarnings": {
			"type": "object",
			"allOf": [{
				"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/CalculatedWarnings/v1/1_000/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
			},
			{
				"type": "object",
				"properties": {
					"items": {
						"type": "array",
						"items": {
							"$ref": "#/components/schemas/CalculatedWarningsInfo"
						}
					}
				}
			}]
		},
		"CalculatedWarningsInfo": {
			"type": "object",
			"properties": {
				"CompanyCode": {
					"type": "integer",
					"example": "1",
					"description": "Código da Empresa"
                },
                "EmployeeId": {
					"type": "string",
					"example": "00007",
					"description": "Chapa"
                },
                "ReferenceDate": {
					"type": "datetime",
					"example": "1999-11-24 16:00:39",
					"description": "Data de referência da jornada"
				},
                "WorkingDayId": {
					"type": "integer",
					"description": "ID da jornada"
                },
                "WarningCode": {
					"type": "integer",
					"description": "Código do aviso"
                },
                "Description": {
					"type": "string",
					"description": "Descrição do aviso"
                },
                "Validated": {
					"type": "integer",
					"description": "Parâmetro booleano para verificar se o aviso foi validado"
                },
                "InitialDate": {
					"type": "datetime",
					"example": "1999-11-24 16:00:39",
					"description": "Data de início"
                },
                "EndDate": {
					"type": "datetime",
					"example": "1999-11-24 16:00:39",
					"description": "Data fim"
				},		
				"id": {
					"type": "string",
					"description": "Identificador do aviso calculado"
				}
			}
		} 
  	}
}	