		},
		"x-totvs": {
			"messageDocumentation": {
				"name": "Period",
				"description": "Dados do período da matriz curricular",
				"segment": "Educacional"
			},
			"productInformation": [
				{
					"product": "RM",
					"contact": "TribeEdu.Squad.EduPortalMobile@totvs.com.br",
					"description": "Período da matriz curricular"
				}
			]
		}
	},
	"definitions": {
		"PagedPeriod": {
			"type": "object",
			"allOf": [
				{
					"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
				},
				{
					"type": "object",
					"properties": {
						"items": {
							"type": "array",
							"items": {
								"$ref": "#/definitions/Period"
							}
						}
					}
				}
			]
		},
		"Period": {
			"description": "Descreve um período de uma matriz curricular",
			"properties": {
				"CompanyCode": {
					"description": "Código da empresa",
					"type": "string",
					"example": 1,
					"x-totvs": [
						{
							"product": "RM",
							"available": true,
							"required": true,
							"note": "Código da empresa",
							"field": "CODCOLIGADA",
							"type": "integer"
						}
					]
				},
				"CompanyInternalId": {
					"description": "InternalId da empresa",
					"type": "string",
					"example": 1,
					"x-totvs": [
						{
							"product": "RM",
							"note": "Código da empresa",
							"field": "CODCOLIGADA",
							"type": "string",
							"required": false,
							"available": true
						}
					]
				},
				"CourseCode": {
					"description": "Código do curso",
					"type": "string",
					"example": "0001",
					"x-totvs": [
						{
							"product": "RM",
							"available": true,
							"required": true,
							"note": "Código do curso",
							"field": "CODCURSO",
							"type": "varchar",
							"length": 10
						}
					]
				},
				"CourseInternalId": {
					"description": "InternalId do curso",
					"type": "string",
					"example": "0001",
					"x-totvs": [
						{
							"product": "RM",
							"available": true,
							"required": false,
							"note": "InternalId do curso",
							"field": "SCURSO.CODCOLIGADA|SCURSO.CODCURSO"
						}
					]
				},
				"MajorCode": {
					"type": "string",
					"example": "0001",
					"description": "Código da habilitação",
					"x-totvs": [
						{
							"product": "RM",
							"field": "CODHABILITACAO",
							"required": true,
							"Type": "varchar",
							"length": 10,
							"available": true,
							"canUpdate": false
						}
					]
				},
				"MajorInternalId": {
					"description": "InternalId da habilitação",
					"type": "string",
					"example": "1",
					"x-totvs": [
						{
							"product": "RM",
							"available": true,
							"required": false,
							"note": "InternalId da habilitação",
							"field": "SHABILITACAO.CODCOLIGADA|SHABILITACAO.CODCURSO|SHABILITACAO.CODHABILITACAO"
						}
					]
				},
				"GradeCode": {
					"type": "string",
					"example": "001",
					"description": "Código da grade",
					"x-totvs": [
						{
							"product": "RM",
							"field": "CODGRADE",
							"required": true,
							"Type": "varchar",
							"length": 10,
							"available": true,
							"canUpdate": false
						}
					]
				},
				"GradeInternalId": {
					"description": "InternalId da grade",
					"type": "string",
					"example": "1",
					"x-totvs": [
						{
							"product": "RM",
							"available": true,
							"required": false,
							"note": "InternalId da grade",
							"field": "SGRADE.CODCOLIGADA|SGRADE.CODCURSO|SGRADE.CODHABILITACAO|SGRADE.CODGRADE"
						}
					]
				},
				"InternalId": {
					"description": "InternalId do período",
					"type": "string",
					"example": "1|1|1|1|1",
					"x-totvs": [
						{
							"product": "RM",
							"note": "SPERIODO.CODCOLIGADA | GFILIAL.CODCURSO | GFILIAL.CODHABILITACAO | GFILIAL.CODGRADE | GFILIAL.CODPERIODO",
							"required": true,
							"available": true
						}
					]
				},
				"Description": {
					"type": "string",
					"example": "1º Período",
					"description": "Descrição do período",
					"x-totvs": [
						{
							"product": "RM",
							"field": "SPERIODO.DESCRICAO",
							"note": "Descrição do período",
							"required": true,
							"Type": "varchar",
							"length": 50,
							"available": true,
							"canUpdate": true
						}
					]
				},
				"ElectiveWorkLoad": {
					"type": "decimal",
					"example": "1,000",
					"description": "Carga horária de disciplinas eletivas do período",
					"x-totvs": [
						{
							"product": "RM",
							"field": "SPERIODO.VALORELETIVA",
							"required": false,
							"type": "numeric",
							"length": 9,
							"available": true,
							"canUpdate": true
						}
					]
				},
				"OptionalWorkLoad": {
					"type": "decimal",
					"example": "1,000",
					"description": "Carga horária de disciplinas eletivas do período",
					"x-totvs": [
						{
							"product": "RM",
							"note": "SPERIODO.VALOROPTATIVA",
							"required": false,
							"available": true,
							"type": "numeric",
							"length": 9,
							"canUpdate": true
						}
					]
				},
				"ReferenceYear": {
					"type": "string",
					"example": "2020",
					"description": "Ano de referência do período",
					"x-totvs": [
						{
							"product": "RM",
							"note": "SPREDIO.ANOREF",
							"required": false,
							"available": true,
							"type": "varchar",
							"length": 15,
							"canUpdate": true
						}
					]
				}
			}
		}
	}
