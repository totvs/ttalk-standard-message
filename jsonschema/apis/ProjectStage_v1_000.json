            "url": "{{host}}/api/framework/v1",
            "variables": {
                "serverUrl": {
                    "default": "localhost"
                },
                "serverHttpPort": {
                    "default": "8051"
                }
            }
        }
    ],
    "info": {
        "description": "API de situação dos projetos",
        "version": "1.000",
        "title": "API de situacao dos projetos",
        "contact": {
            "name": "T-Talk",
            "url": "API.Totvs.com.br",
            "email": "comiteintegracao@totvs.com.br"
        },
        "x-totvs": {
            "messageDocumentation": {
                "name": "ProjectStage",
                "description": "API de situação dos projetos",
                "segment": "Foundation"
            },
            "productInformation": [
                {
                    "product": "Protheus",
                    "contact": "Protheus_FW@totvs.com.br",
                    "description": "Chaves de configuracao de stages",
                    "adapter": "",
                    "helpUrl": "link aqui",
                    "note": "Essa API exige que seja configurada a seguranca no servidor (SECURITY=1)."
                }
            ]
        }
    },
    "paths": {
        "/ProjectStage/{projectid}": {
            "get": {
                "tags": [
                    "ProjectStage"
                ],
                "summary": "Identifica os ambientes onde o projeto foi aplicado",
                "description": "Retorna uma lista de ambientes onde o projeto foi aplicado e qual seu stage e nivel (stagelevel)",
                "operationId": "projectid",
                "x-totvs": {
                    "productInformation": [
                        {
                            "product": "Protheus",
                            "available": true,
                            "note": "Este verbo esta disponivel com todos os parametros",
                            "minimalVersion": "12.1.27"
                        }
                    ]
                },
                "parameters": [
                    {
                        "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/ProjectStage/v1/2_000/jsonschema/schemas/ProjectStage_1_000.json#/parameters/projectid"
                    },
                    {
                        "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/ProjectStage/v1/2_000/jsonschema/schemas/ProjectStage_1_000.json#/parameters/projectVer"
                    },
                    {
                        "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/ProjectStage/v1/2_000/jsonschema/schemas/ProjectStage_1_000.json#/parameters/companyGrp"
                    },
                    {
                        "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/parameters/Authorization"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operação realizada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "address": {
                                            "description": "endereco do servidor",
                                            "type": "string",
                                            "example": "192.168.0.10",
                                            "maxLength": 20
                                        },
                                        "port": {
                                            "description": "porta do servidor",
                                            "type": "string",
                                            "example": "7000",
                                            "maxLength": 10
                                        },
                                        "environment": {
                                            "description": "nome do environment",
                                            "type": "string",
                                            "example": "envtop",
                                            "maxLength": 200
                                        },
                                        "stage": {
                                            "description": "nome do stage",
                                            "type": "string",
                                            "example": "production",
                                            "maxLength": 30
                                        },
                                        "level": {
                                            "description": "nivel do stage",
                                            "type": "string",
                                            "example": "3",
                                            "maxLength": 3
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}