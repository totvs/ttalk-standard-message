{
	"openapi": "3.0.1",
	"servers": [
		{
			"description": "API para gerar uma solicitação de pagamento através do TOTVS Pagamento Digital",
			"url": "{{host}}/api/financial/v1",
			"variables": {
				"serverUrl": {
					"default": "localhost"
				},
				"serverHttpPort": {
					"default": "8051"
				}
			}
		}
	],
	"info": {
		"description": "API para gerar uma solicitação de pagamento através do TOTVS Pagamento Digital",
		"version": "1.000",
		"title": "PaymentLink",
		"contact": {
			"name": "T-Talk",
			"url": "http://api.totvs.com.br",
			"email": "comiteintegracao@totvs.com.br"
		},
		"x-totvs": {
			"messageDocumentation": {
				"name": "PaymentLink",
				"description": "Solicitação de pagamento através do TOTVS Pagamento Digital",
				"segment": "Financeiro"
			},
			"productInformation": [
				{
					"product": "RM",
					"contact": "tribebo.todos@totvs.com.br",
					"description": "API para gerar uma solicitação de pagamento através do TOTVS Pagamento Digital"
				}
			]
		}
	},
	"paths": {
		"/paymenthub/{PaymentInternalId}/link": {
			"post": {
				"tags": [
					"link"
				],
				"operationId": "postPaymentLink",
				"summary": "Faz a solicitação de pagamento",
				"description": "Realiza solicitação de pagamento do TOTVS Pagamento Digital",
				"x-totvs": {
					"productInformation": [
						{
							"product": "RM",
							"available": true,
							"note": "Este verbo esta disponivel com todos os parametros",
							"minimalVersion": "12.1.29"
						}
					]
				},
				"parameters": [
					{
						"$ref": "#/components/parameters/ContentType"
					},
					{
						"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/parameters/Authorization"
					},
					{
						"$ref": "#/components/parameters/PaymentInternalId"
					}
				],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/FinancialPaymentLink/v1/1_000/jsonschema/schemas/FinancialPaymentLink_1_000.json#/definitions/PaymentLinkBody"
							}
						}
					},
					"description": "Solicitação de pagamento a ser realizada no TOTVS Pagamento Digital",
					"required": true
				},
				"responses": {
					"201": {
						"description": "Created",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/FinancialPaymentLink/v1/1_000/jsonschema/schemas/FinancialPaymentLink_1_000.json#/definitions/PaymentLink"
								}
							}
						}
					},
					"400": {
						"description": "Bad request",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/ErrorModelBase"
								}
							}
						}
					},
					"401": {
						"description": "Unauthorized",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/ErrorModelBase"
								}
							}
						}
					},
					"500": {
						"description": "Internal Server Error",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/ErrorModelBase"
								}
							}
						}
					}
				}
			}
		},
		"/paymenthub/{PaymentInternalId}/link/{TransactionCode}":{
			"get": {
				"tags": [
					"link"
				],
				"summary": "",
				"description": "Retorna os dados da transação do TOTVS Pagamento Digital",
				"operationId": "getId",
				"x-totvs": {
					"productInformation": [
						{
							"product": "RM",
							"available": true,
							"note": "Este verbo esta disponível com todos os parâmetros",
							"minimalVersion": "12.1.29"
						}
					]
				},
				"parameters": [
					{
						"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/parameters/Authorization"
					},
					{
						"$ref": "#/components/parameters/PaymentInternalId"
					},
					{
						"$ref": "#/components/parameters/TransactionCode"
					}
				],
				"responses": {
					"200": {
						"description": "Operação realizada com sucesso",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/FinancialPaymentLink/v1/1_000/jsonschema/schemas/FinancialPaymentLink_1_000.json#/definitions/PagedPaymentLink"
								}
							}
						}
					},
					"404": {
						"description": "Usuário não localizado na base",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/ErrorModel"
								}
							}
						}
					}
				}
			}
		}
	},
	"components": {
		"parameters": {
			"ContentType": {
				"name": "Content-Type",
				"in": "header",
				"description": "Tipo do conteúdo da requisição",
				"required": true,
				"schema": {
					"type": "string"
				}	
			},
			"PaymentInternalId": {
				"name": "PaymentInternalId",
				"in": "path",
				"required": true,
				"description": "Identificador Interno",
				"schema": {
					"type": "string"
				},
				"x-totvs": [
					{
						"product": "RM",
						"note": "CODCOLIGADA|CODFILIAL",
						"required": false,
						"available": true
					}
				]
			},
			"TransactionCode": {
				"name": "TransactionCode",
				"in": "path",
				"required": true,
				"description": "Identificador da transação",
				"schema": {
					"type": "string"
				}
			}
		}
	}
}