					},
					"404": {
						"description": "Registro não encontrado",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/CustomerCreditLimit/v1/1_000/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/ErrorModel"
