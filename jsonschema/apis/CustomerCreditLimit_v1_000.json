                "operationId": "getCustomerInternalId",
                "x-totvs": {
					"productInformation": [
						{
							"product": "Protheus",
							"available": true,
							"note": "Este verbo esta disponível com os parâmetros Authorization, Fields e CustomerInternalId",
							"minimalVersion": "12.1.23"
