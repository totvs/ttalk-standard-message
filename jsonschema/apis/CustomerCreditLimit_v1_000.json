                ],
                "responses": {
                    "200":{
                        "description": "Operação realizada com sucesso",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/CustomerCreditLimit/v1/1_000/jsonschema/schemas/CustomerCreditLimit_1_000.json#/definitions/PagedCustomerCreditLimit"
								}
							}
						}
                    },
                    "404": {
                        "description": "Erro no momento da alteração",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/CustomerCreditLimit/v1/1_000/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/ErrorModel"
								}
							}
						}
                    }
                }
